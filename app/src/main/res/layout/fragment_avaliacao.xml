<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="youtube.demo.youtubedemo.Fragments.AvaliacaoFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp">

        <TextView
            android:text="Avaliar local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/avaliacaoTitle"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Informe sua avaliação para o seguinte estabelecimento:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/avaliacaoBar"
            android:textSize="18sp"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Atendimento:"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:layout_width="60dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/atendNota"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:textAlignment="center"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Lotação:"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:layout_width="60dp" />

            <EditText
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/atendLot"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Produtos:"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:layout_width="60dp" />

            <EditText
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/atendProd"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Preços:"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:layout_width="60dp" />

            <EditText
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/atendPrec"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp" />

        </LinearLayout>

        <TextView
            android:text="Observações:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/obsField" />

        <Button
            android:text="Enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enviarButton"
            android:layout_marginTop="30dp" />

    </LinearLayout>

</FrameLayout>
