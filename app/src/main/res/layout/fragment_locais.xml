<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            app:srcCompat="@mipmap/iconebar"
            android:id="@+id/imageView3"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="10dp"
            android:layout_height="240dp" />

        <TextView
            android:text="Sanduicheria da Ilha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/placetitle"
            android:layout_marginTop="49dp"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Rua Altamiro Guimarães, 4234 - Centro - Florianópolis/SC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/placeadress"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/placetitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Atendimento:"
                android:layout_height="wrap_content"
                android:id="@+id/atend"
                android:layout_marginTop="170dp"
                android:textAlignment="textEnd"
                android:layout_width="260dp" />

            <TextView
                android:text="Lotação:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lotac"
                android:textAlignment="textEnd" />

            <TextView
                android:text="Produtos:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/produt"
                android:textAlignment="textEnd" />

            <TextView
                android:text="Preços:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/precos"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="9,5"
                android:layout_height="wrap_content"
                android:id="@+id/notaAtend"
                android:layout_marginTop="170dp"
                android:textStyle="normal|bold"
                android:textAlignment="textEnd"
                android:textColor="@color/Red"
                android:layout_width="150dp" />

            <TextView
                android:text="5,2"
                android:layout_height="wrap_content"
                android:id="@+id/notaLot"
                android:textAlignment="textEnd"
                android:textColor="@color/Red"
                android:textStyle="normal|bold"
                android:layout_width="150dp" />

            <TextView
                android:text="9,3"
                android:layout_height="wrap_content"
                android:id="@+id/notaProd"
                android:textAlignment="textEnd"
                android:textColor="@color/Red"
                android:textStyle="normal|bold"
                android:layout_width="150dp" />

            <TextView
                android:text="7,8"
                android:layout_height="wrap_content"
                android:id="@+id/notaPrec"
                android:textAlignment="textEnd"
                android:textColor="@color/Red"
                android:textStyle="normal|bold"
                android:layout_width="150dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="97dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spac1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spac2" />

                <TextView
                    android:text="Fernando Rod:"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/author1"
                    android:textAlignment="center"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Joe Joe:"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/author2"
                    android:textAlignment="center"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spac3" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:text="Últimas postagens:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ultPostTitle"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spac4" />

                <TextView
                    android:text="O bar está meio vazio, mas o atendimento é demorado. (15/12/2016 às 15h)"
                    android:layout_width="match_parent"
                    android:id="@+id/post1"
                    android:layout_height="35dp"
                    android:paddingStart="5dp" />

                <TextView
                    android:text="Vontade de ir para casa... (12/12/2016 às 22h)"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/post2"
                    android:layout_weight="0.19"
                    android:paddingStart="5dp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>