
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="youtube.demo.youtubedemo.LoginActivity"
        android:id="@+id/login_form">
        <!-- Login progress -->
        <ImageView
            android:src="@mipmap/beer"
            android:scaleType = "fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="150dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <TextView
            android:text="Bora!?"
            android:layout_width="match_parent"
            android:layout_height="125px"
            android:layout_marginTop="34dp"
            android:id="@+id/titulo"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            tools:text="Bora!?"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="56sp"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:selectAllOnFocus="false"
            android:fontFamily="casual" />


        <EditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="@string/prompt_password"
            android:imeActionId="@+id/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="0.72"
            android:selectAllOnFocus="false"
            android:background="@color/common_google_signin_btn_text_dark_disabled"

            android:textColorLink="@android:color/transparent"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:layout_below="@+id/email"
            android:layout_toRightOf="@+id/login_progress"
            android:layout_toEndOf="@+id/login_progress"
            android:textCursorDrawable="@color/black"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            style="@style/EditTextCustomHolo"/>

        <Button
            android:id="@+id/email_sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:text="@string/action_sign_in"
            android:textStyle="bold"
            android:layout_below="@+id/password"
            android:layout_toRightOf="@+id/login_progress"
            android:layout_marginTop="55dp"
            android:layout_width="200dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="95dp"
            android:textColor="@color/White" />


        <AutoCompleteTextView
            android:id="@+id/email"
            android:hint="@string/prompt_email"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:textAlignment="center"
            android:singleLine="true"
            android:background="@color/common_google_signin_btn_text_dark_disabled"
            android:backgroundTint="@null"
            android:selectAllOnFocus="false"
            android:textColorLink="@android:color/transparent"
            android:textCursorDrawable="@color/black"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="74dp"
            android:layout_below="@+id/email_login_form"
            android:layout_marginRight="70dp"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password"
            style="@style/EditTextCustomHolo"/>

        <Button
            android:text="NÃ£o possui cadastro?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_below="@+id/email_sign_in_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:textColor="@color/black"
            android:background="@drawable/mybutton_border"
            android:elevation="0dp"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

    </RelativeLayout>
