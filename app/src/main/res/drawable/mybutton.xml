<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#060606" />
            <gradient android:angle="-90" android:startColor="#4d4d4d" android:endColor="#282828"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#282828" />
            <solid android:color="#454444"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3d3d3d" />
            <gradient android:angle="-90" android:startColor="#060606" android:endColor="#414141" />
        </shape>
    </item>
</selector>